<Window x:Class="WarehouseApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseApp"
        mc:Ignorable="d"
        Title="Вход" Height="300" Width="300">
    <StackPanel HorizontalAlignment="Stretch" Margin="5" MaxWidth="200" VerticalAlignment="Center">
        <GroupBox Header="Логин">
            <TextBox Name="txtLogin"/>
        </GroupBox>
        <GroupBox Header="Пароль">
            <PasswordBox Name="passBox"/>
        </GroupBox>
        <Button Margin="30,5,30,5" Click="ButtonLogin_Click" MinHeight="50" >Войти</Button>
    </StackPanel>
</Window>

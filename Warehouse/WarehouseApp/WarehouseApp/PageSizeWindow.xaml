<Window x:Class="WarehouseApp.PageSizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseApp"
        mc:Ignorable="d"
        Title="PageSizeWindow" Height="150" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <GroupBox Header="Кол-во страниц для вывода" Margin="5">
            <TextBox Name="txtPageSize"/>
        </GroupBox>
        <Button MaxWidth="100" Click="Button_Click">Сохранить</Button>
    </StackPanel>
</Window>
